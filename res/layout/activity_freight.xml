<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="asia.sk8.yunda.FreightActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="转运号："
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/freightTrackingNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/textView1"
        android:gravity="right"
        android:hint="557fd544e4b035745ac8b904"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/freightConfirmButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/holo_green_light"
        android:text="完成运单" />

    <Button
        android:id="@+id/freightGiveUpButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@android:color/holo_red_light"
        android:text="放弃修改" />

    <TextView
        android:id="@+id/TextView07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView06"
        android:layout_below="@+id/TextView06"
        android:layout_marginTop="6dp"
        android:text="YD单号："
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/TextView06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="6dp"
        android:text="入库号："
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/freightRKNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/freightTrackingNumberTextView"
        android:layout_alignRight="@+id/freightTrackingNumberTextView"
        android:layout_alignTop="@+id/TextView06"
        android:gravity="right"
        android:hint="RK0000000000"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/freightYDNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/freightRKNumberTextView"
        android:layout_alignTop="@+id/TextView07"
        android:layout_toRightOf="@+id/TextView02"
        android:gravity="right"
        android:hint="YD00000000000"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/freightChannelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/freightYDNumberTextView"
        android:layout_alignTop="@+id/TextView10"
        android:layout_toRightOf="@+id/TextView07"
        android:minHeight="36dp"
        android:text="读取中..."
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/TextView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView07"
        android:layout_below="@+id/TextView07"
        android:layout_marginTop="6dp"
        android:text="渠道："
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/freightRealNameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/freightChannelButton"
        android:layout_alignRight="@+id/freightChannelButton"
        android:layout_below="@+id/freightChannelButton"
        android:minHeight="36dp"
        android:text="读取中..."
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView04"
        android:layout_below="@+id/freightRealNameButton"
        android:layout_marginTop="6dp"
        android:text="重量"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/TextView05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_below="@+id/TextView01"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:text="精确分包："
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/TextView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView09"
        android:layout_below="@+id/TextView09"
        android:layout_marginTop="6dp"
        android:text="运费："
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/freightFailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/freightConfirmButton"
        android:layout_alignLeft="@+id/freightConfirmButton"
        android:layout_alignRight="@+id/freightConfirmButton"
        android:layout_marginBottom="20dp"
        android:text="发货失败" />

    <Button
        android:id="@+id/freightCalculateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/freightFailButton"
        android:layout_alignBottom="@+id/freightFailButton"
        android:layout_alignLeft="@+id/freightGiveUpButton"
        android:layout_alignRight="@+id/freightGiveUpButton"
        android:text="计算运费" />

    <TextView
        android:id="@+id/TextView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView11"
        android:layout_below="@+id/TextView11"
        android:layout_marginTop="6dp"
        android:text="备注："
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/freightNoteEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView12"
        android:layout_alignRight="@+id/freightTotalTextView"
        android:layout_below="@+id/TextView12"
        android:ems="10"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/freightExceedWeightEditText"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView01"
        android:layout_alignRight="@+id/freightRealNameButton"
        android:ems="10"
        android:gravity="right"
        android:hint="0.0"
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        android:singleLine="false"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/freightExceedWeightEditText"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/freightExceedWeightEditText"
        android:text="体积重"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/freightExtraWeightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/freightExceedWeightEditText"
        android:layout_alignRight="@+id/freightExceedWeightEditText"
        android:layout_alignTop="@+id/TextView08"
        android:gravity="center"
        android:text="否"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/TextView08"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView03"
        android:layout_alignTop="@+id/freightSplitTextView"
        android:text="加固："
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/TextView09"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView05"
        android:layout_below="@+id/freightSplitTextView"
        android:layout_marginTop="6dp"
        android:text="保价："
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/freightInsuranceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/freightExtraWeightTextView"
        android:layout_alignTop="@+id/TextView09"
        android:text="$5.00"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/freightTotalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/freightInsuranceTextView"
        android:layout_alignTop="@+id/TextView11"
        android:text="待计算"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/freightWeightEditText"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/freightYDNumberTextView"
        android:layout_alignTop="@+id/TextView02"
        android:layout_toLeftOf="@+id/freightOzEditText"
        android:ems="10"
        android:gravity="right"
        android:hint="磅数"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/freightOzEditText"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/freightWeightEditText"
        android:layout_alignBottom="@+id/freightWeightEditText"
        android:layout_toLeftOf="@+id/TextView03"
        android:ems="10"
        android:gravity="right"
        android:hint="盎司"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView02"
        android:layout_below="@+id/freightWeightEditText"
        android:text="费用明细："
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/freightSplitTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/TextView05"
        android:layout_toRightOf="@+id/TextView05"
        android:gravity="center"
        android:text="否"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView10"
        android:layout_alignTop="@+id/freightRealNameButton"
        android:text="用户名："
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>